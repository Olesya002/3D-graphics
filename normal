F = 20-x.^2-y.^2;
x = linspace(-pi,pi,40);
y = linspace(-pi,pi,50);
surfc(x,y,F);
xlabel('x'); ylabel('y'); zlabel('z');
hold on
grid on
x0 = 0; x1 = 2*x0;
y0 = -1; y1 = 2*y0;
z0 = 20-x0.^2-y0.^2; z1 = 1;
plot3([x0,x1],[y0,y1],[z0,z1],'Linewidth',2)
plot3(x0,y0,z0,"b*");
R = 0.1; 
phi = 0:0.01:6*pi;
r = R*phi;
x2 = r.*cos(phi);
y2 = r.*sin(phi);
z2 = 20-x2.^2-y2.^2;
z3 = zeros(length(z2));
plot3(x2,y2,z2,'r','Linewidth',2);
plot3(x2,y2,z3,'g','Linewidth',2);
