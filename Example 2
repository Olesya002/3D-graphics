t = 0:.005:6*pi;
x = sin(t);
y =2*cos(t);
plot3(x,y,t);
hold on
grid on
t0 = 7*pi/2;
x1 = sin(t0);
y1 = 2*cos(t0);
z1 = t0;
x0 = cos(t0);
y0 = -2*sin(t0);
z0 = 1;
x2 = x1 + x0;
y2 = y1 + y0;
z2 = z1 + z0;
line([x1,x2],[y1,y2],[z1,z2], "Color",'r');
x3 = x1 - x0;
y3 = y1 - y0;
z3 = z1 - z0;
line([x1,x3],[y1,y3],[z1,z3], "Color",'r');
plot3(x1,y1,z1,"r*");
